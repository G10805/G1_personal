<qcarcam_inputs>
    <extra_mode>
        <properties latency_mode="0"/>
    </extra_mode>
    <input_device>
        <!-- 
          There are 8 v4l2 nodes, /dev/video51 -> /dev/video58 on ADP board, 
          ais_v4l2loopback_config.xml defines the relationship between input_id and v4l2_node.
          By default /dev/video51 is relative to input_id=0. The v4l2_node is the most important field.
         -->
        <properties input_id="0" v4l2_node="/dev/video51" />
        <display_setting display_id="0"  />
        <output_setting nbufs="5"/>
    </input_device>
</qcarcam_inputs>
