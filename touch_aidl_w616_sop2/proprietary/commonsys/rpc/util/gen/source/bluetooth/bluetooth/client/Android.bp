cc_library_shared {
    name: "libqti-bluetooth-rpc",
    owner: "qti",
    proprietary: true,

    srcs: [
        "aidl/*.cpp",
        "aidl/util/*.cpp",
    ],

    cflags: ["-Wall", "-Werror"],

    static_libs: [
        "libqti-bluetooth-proto",
    ],

    shared_libs: [
        "android.hardware.bluetooth-V1-ndk",
        "libbase",
        "libbinder_ndk",
        "libcutils",
        "liblog",
        "libqti_hal_rpc_util",
        "libqti_log_util",
        "libqti_message_sched_util",
        "libqti_proto_util",
        "libqti_rpc_common_util",
        "libqti_someip_util",
        "libqti-bluetooth-message",
        "libutils",
        "libvsomeip3",
    ],

    export_include_dirs: [
        "aidl",
        "aidl/api",
        "aidl/util",
    ],

    sanitize: {
        integer_overflow: true,
    },
}