package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

soong_config_module_type {
  name: "cam_config_cc_defaults_qcx",
  module_type: "cc_defaults",
  config_namespace: "camconfigcommonsys",
  bool_variables: [
      "camconfig_enabled",
  ],
  properties: [
    "defaults",
    "local_include_dirs",
    "srcs",
    "shared_libs",
    "static_libs",
    "required",
    "init_rc",
    "cflags",
  ],
}

cam_config_cc_defaults_qcx {
  name: "cam_config_defaults_qcx",
  srcs: [
    "src/evs_app.cpp",
  ],
  soong_config_variables: {
    camconfig_enabled : {
      defaults: [
        "android.hardware.graphics.common-ndk_shared",
        "vhalclient_defaults",
      ],
      local_include_dirs: ["inc"],
      srcs: [
        "src/ConfigManager.cpp",
        "src/EvsStateControl.cpp",
        "src/FormatConvert.cpp",
        "src/RenderBase.cpp",
        "src/RenderPixelCopy.cpp",
        "src/shader.cpp",
        "src/TexWrapper.cpp",
        "src/VideoTex.cpp",
        "src/glError.cpp",
        "src/RenderDirectView.cpp",
        "src/RenderTopView.cpp",
        "src/StreamHandler.cpp",
        "src/Utils.cpp",
        "src/EvsEnumeratorStatusCallback.cpp",
      ],
      shared_libs: [
        "android.hardware.automotive.vehicle@2.0",
        "android.hardware.camera.device@3.2",
        "android.frameworks.automotive.telemetry-V1-ndk",
        "android.hardware.automotive.evs-V1-ndk",
        "android.hardware.common-V2-ndk",
        "libEGL",
        "libGLESv2",
        "libbase",
        "libbinder",
        "libbinder_ndk",
        "libcamera_metadata",
        "libcutils",
        "libhardware",
        "libpng",
        "libprotobuf-cpp-lite",
        "libui",
        "libjsoncpp",
        "libvhalclient",
        "libutils",
      ],
      static_libs: [
        "libaidlcommonsupport",
        "libmath",
      ],
      required: [
        "config_qcarcam_qcx_aidl.json",
        "CarFromTop_qcarcam_qcx.png",
        "LabeledChecker_qcarcam_qcx.png",
      ],
      init_rc: ["evs_qcx_aidl_app.rc"],
      cflags: [
        "-DLOG_TAG=\"EvsApp\"",
        "-DGL_GLEXT_PROTOTYPES",
        "-DEGL_EGLEXT_PROTOTYPES",
        "-DFPS_PRINT",
        "-Wall",
        "-Werror",
        "-Wunused",
        "-Wunreachable-code",
        "-D__ANDROID_U__",
      ],
    }
  }
}

cc_binary {
    name: "evs_qcx_aidl_app",
    defaults: [
        "cam_config_defaults_qcx",
    ],
}

prebuilt_etc {
    name: "config_qcarcam_qcx_aidl.json",
    src: "res/config_qcarcam.json",
    sub_dir: "automotive/evs",
}

prebuilt_etc {
    name: "CarFromTop_qcarcam_qcx.png",
    src: "res/CarFromTop.png",
    sub_dir: "automotive/evs",
}

prebuilt_etc {
    name: "LabeledChecker_qcarcam_qcx.png",
    src: "res/LabeledChecker.png",
    sub_dir: "automotive/evs",
}
